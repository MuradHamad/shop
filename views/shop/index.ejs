<%- include('../partials/head', {title:PageTitle})%>
<%- include('../partials/nav')%>

<!-- Carousel Styles -->
<style>
    /* Previous styles remain the same */
    
    #heroCarousel .carousel-item::before {
      content: '';
      position: absolute;
      inset: 0;
      background: rgba(0, 0, 0,0.1 );
      z-index: 1;
      pointer-events: none; /* THIS IS THE KEY FIX */
    }
  
    #heroCarousel .carousel-caption > * {
      position: relative;
      z-index: 2;
      pointer-events: auto; /* Ensure buttons are clickable */
    }
    
    #heroCarousel .btn {
      pointer-events: auto; /* Explicitly make buttons clickable */
    }
</style>

<!-- Carousel -->
<div id="heroCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
  <div class="carousel-inner">
    <!-- Slide 1 -->
    <div class="carousel-item active">
      <div class="container text-center d-flex flex-column justify-content-center align-items-center" style="height: 90vh; background-color: #f8f9fa;">
        <img src="/images/apple.png" class="img-fluid mb-4" alt="Apple product" style="max-height: 200px;margin-top: -100px;">
        <h1 class="text-dark">Discover Great Deals</h1>
        <p class="text-dark">Shop the latest products at unbeatable prices.</p>
        <a class="btn btn-primary btn-lg" href="/shop/products">Shop Now</a>
      </div>
    </div>

    <!-- Slide 2 -->
    <div class="carousel-item">
      <div class="container text-center d-flex flex-column justify-content-center align-items-center" style="height: 90vh; background-color: #e9ecef;">
        <img src="/images/apple2.png" class="img-fluid mb-4" alt="Apple product" style="max-height: 400px;margin-bottom: -100px;">
        <div style="margin-top: -150px;">
            <h1 class="text-dark">New Arrivals</h1>
            <p class="text-dark">Check out our newest products in stock.</p>
            <a class="btn btn-success btn-lg" href="/shop/new-arrivals">Explore</a>
        </div>
      </div>
    </div>

    <!-- Slide 3 -->
    <div class="carousel-item">
      <div class="container text-center d-flex flex-column justify-content-center align-items-center" style="height: 90vh; background-color: #dee2e6;">
        <img src="/images/accessories.png" class="img-fluid mb-4" alt="Accessories" style="max-height: 300px;">
        <h1 class="text-dark">Premium Accessories</h1>
        <p class="text-dark">Complete your setup with our high-quality accessories.</p>
        <a class="btn btn-danger btn-lg" href="/shop/accessories">Browse</a>
      </div>
    </div>
  </div>

  <!-- Controls -->
  <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<%- include('../partials/footer')%>